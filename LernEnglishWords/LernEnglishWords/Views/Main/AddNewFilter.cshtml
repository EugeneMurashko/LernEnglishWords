        @{ 
            List<string> PartOfSpeechList = new List<string>();
            foreach (var pos in ViewBag.PartOfSpeech as List<LernEnglishWords.Models.PartOfSpeech>)
            {
                PartOfSpeechList.Add(pos.Name);
            }

            List<string> CategoryOfWord = new List<string>();
            foreach (var cow in ViewBag.CategoryOfWord as List<LernEnglishWords.Models.CategoryOfWord>)
            {
                CategoryOfWord.Add(cow.Name);
            }
        }
    <!-- Modal -->
    <div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Добавить новый фильтр</h4>
            </div>
            @using (Html.BeginForm("Index", "Main"))
            {
                <div class="modal-body">
                    <div class="row">
                        <div class="col-xs-5">
                            <div class="form-group">
                                @Html.ListBox("_part_of_speech", new MultiSelectList(PartOfSpeechList),
                                    new
                                    {
                                        @class = "selectpicker",
                                        data_actions_box = "true",
                                        data_selected_text_format = "count > 5",
                                        data_width = "500px"
                                    })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-5">
                            <div class="form-group">
                                @Html.ListBox("_category_of_word", new MultiSelectList(CategoryOfWord),
                                    new
                                    {
                                        @class = "selectpicker",
                                        data_live_search = "true",
                                        data_actions_box = "true",
                                        data_selected_text_format = "count > 5",
                                        data_width = "500px"
                                    })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="submit" class="btn btn-default" value="Отправить" />

                    <button type="button" class="btn btn-default" data-dismiss="modal">Отмена</button>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts{
    $('.selectpicker').selectpicker({
    style: 'btn-info',
    size: 4
    });
}